#:kivy 2.3.0

<ChatLayout>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    ScrollView:
        size_hint_y: 0.9
        do_scroll_x: False
        do_scroll_y: True

        Label:
            id: chat_history
            text: ''
            markup: True
            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1]
            font_size: 16
            color: 0.83, 0.78, 0.75, 1  # #d4c8c0

    BoxLayout:
        size_hint_y: 0.1
        spacing: 10

        Button:
            text: 'üìé'
            size_hint_x: 0.15
            font_size: 20
            background_normal: ''
            background_color: (0.18, 0.18, 0.18, 1)

        TextInput:
            id: input_box
            hint_text: '–ù–∞–ø–∏—à–∏ —á—Ç–æ-–Ω–∏–±—É–¥—å...'
            multiline: False
            size_hint_x: 0.70
            background_color: (0.18, 0.18, 0.18, 1)
            foreground_color: 0.83, 0.78, 0.75, 1
            cursor_color: 0.83, 0.78, 0.75, 1
            font_size: 16

        Button:
            text: '‚û§'
            size_hint_x: 0.15
