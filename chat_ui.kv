#:import dp kivy.metrics.dp

<ChatLayout>:
    orientation: 'vertical'
    spacing: dp(5)
    padding: dp(10)

    ScrollView:
        id: scroll_view
        do_scroll_x: False
        bar_width: dp(6)
        scroll_type: ['bars', 'content']
        BoxLayout:
            id: chat_box
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(8)
            padding: dp(5)

    BoxLayout:
        size_hint_y: None
        height: dp(60)
        spacing: dp(5)
        padding: dp(5)
        canvas.before:
            Color:
                rgba: 0.18, 0.18, 0.18, 1  # #2d2d2d
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: 'ðŸ“Ž'
            size_hint_x: None
            width: dp(50)
            background_color: 0.2, 0.2, 0.2, 1
            color: 1, 1, 1, 1
            on_release: app.root.send_message()
        TextInput:
            id: message_input
            multiline: False
            hint_text: "Ð½Ð°Ð¿Ð¸ÑˆÐ¸..."
            foreground_color: 0.83, 0.78, 0.75, 1  # #d4c8c0
            background_color: 0.11, 0.11, 0.11, 1  # #1c1c1c
            cursor_color: 1, 1, 1, 1
            hint_text_color: 0.5, 0.5, 0.5, 1
            font_size: dp(16)
            padding: [dp(10), dp(10)]
            on_text_validate: root.send_message()
        Button:
            text: 'âž¤'
